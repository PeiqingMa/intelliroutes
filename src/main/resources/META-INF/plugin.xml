<idea-plugin>
  <id>com.github.tomasmilata.intelliroutes</id>
  <name>Play Routes</name>
  <vendor email="tomas.milata@gmail.com" url="https://github.com/tomas-milata">Tomáš Milata</vendor>

  <description><![CDATA[
      Support for <em>routes</em> files in Play framework.
    ]]></description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="171"/>

  <depends>com.intellij.modules.java</depends>
  <depends>org.intellij.scala</depends>


  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.github.tomasmilata.intelliroutes.RoutesFileTypeFactory"/>
    <lang.parserDefinition language="Routes" implementationClass="com.github.tomasmilata.intelliroutes.RoutesParserDefinition"/>
    <lang.syntaxHighlighterFactory key="Routes" implementationClass="com.github.tomasmilata.intelliroutes.RoutesSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="com.github.tomasmilata.intelliroutes.RoutesColorSettingsPage"/>
    <completion.contributor language="Routes" implementationClass="com.github.tomasmilata.intelliroutes.RoutesCompletionContributor"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>